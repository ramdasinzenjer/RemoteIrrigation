<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.inzenjer.remoteirrigation.Login">

    <TextView
        android:id="@+id/enterDeviceId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:padding="10dp"
        android:text="ENTER YOUR DEVICE ID "
        android:textColor="#000"
        android:textSize="25dp" />
    <EditText
        android:id="@+id/edt_devic_id_box"
        android:layout_margin="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/enterDeviceId"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:hint="device id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edt_devic_id_box"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="okie" />


</RelativeLayout>
